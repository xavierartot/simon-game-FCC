$green         =       #3e9146
$blue          =       #272c51

//mixins
shape(size, color)//size  150px, $yellow
  width 0
  height 0
  border-right size solid color
  border-top size solid color
  border-left size solid color
  border-bottom size solid color
  border-top-left-radius 380px
  border-top-right-radius 0
  border-bottom-left-radius 0
  border-bottom-right-radius 352px

.mask-shape
  opacity: 0 !important
.error
  background-color: red !important
  color #fff  !important
  text-transform: uppercase
.show
  display: block !important
.hide
  display: none !important
body
  background-color $gray
  color #fff
  font-family 'Roboto', sans-serif
  text-align center
  
  h1
    margin 0 0 1em
    font-size 2em
    text-align center
    width 100%
  .alert
    color #f00 !important 
    background-color $gray-blue !important 
    border 1px solid $red !important
  .hide
    display none !important
  .show
    display block !important

  .circle 
    position relative 
    display block
    background black
    border-radius 100%
    height 600px
    width  600px
    margin 0
    background radial-gradient(circle at 100px 100px, hsl(212, 12%, 24%), hsl(0, 0%, 0%))
    margin 0 auto
    .shape
      position relative
      z-index 1
      text-indent -100000px
      .shape__color
      .shape__color-green      
        shape(150px, $green)
        transform rotate(0deg)
        position: absolute;
        top: 0
        left: 0
      .shape__color-red      
        shape(150px, $red)
        transform rotateX(-180deg)
        position absolute
        top 0
        left 300px
      .shape__color-blue      
        shape(150px, $blue)
        position absolute
        top: 300px
        left 300px
        transform rotateX(-360deg)
      .shape__color-yellow      
        shape(150px, $yellow)
        transform rotateX(180deg)
        position: absolute;
        top: 300px;
        left: 0;
      .shape__color-green.active      
        border-right:  150px solid hsl(136, 70%, 46%);
        border-top:    150px solid hsl(136, 70%, 46%);
        border-left:   150px solid hsl(136, 70%, 46%);
        border-bottom: 150px solid hsl(136, 70%, 46%);
      .shape__color-red.active      
        border-right:  150px solid hsl(365, 75%, 47%);
        border-top:    150px solid hsl(365, 75%, 47%);
        border-left:   150px solid hsl(365, 75%, 47%);
        border-bottom: 150px solid hsl(365, 75%, 47%);
      .shape__color-blue.active      
        border-right   150px solid hsl(243, 60%, 29%);
        border-top:    150px solid hsl(243, 60%, 29%);
        border-left:   150px solid hsl(243, 60%, 29%);
        border-bottom  150px solid hsl(243, 60%, 29%);
      .shape__color-yellow.active
