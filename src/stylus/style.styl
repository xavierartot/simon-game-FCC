  /* The switch - the box around the slider */
  .switch 
    position relative
    display inline-block
    width 60px
    height 34px
    margin-top 0.5em
    margin-bottom 0.5em

  /* Hide default HTML checkbox */
  .switch input displaynone

  /* The slider */
  .slider 
    position absolute
    cursor pointer
    top 0
    left 0
    right 0
    bottom 0
    background-color #ccc
    transition .4s
  .slider:before 
    position absolute
    content ""
    height 26px
    width 26px
    left 4px
    bottom 4px
    background-color white
    transition .4s
    border-radius 34px
  input:checked + .slider 
    background-color hsl(207, 18%, 57%)
  input:focus + .slider 
    box-shadow 0 0 1px hsl(107, 18%, 57%)
  input:checked + .slider:before 
    transform translateX(26px)

  /* Rounded sliders */
  .slider.round 
    border-radius 34px
  .slider.round:before 
    border-radius 50%
  

